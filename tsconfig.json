{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "./apps/mobile/src/*"
      ],
      "@shared/*": [
        "./shared/utils/src/*"
      ],
      "@types/*": [
        "./apps/mobile/src/types/*"
      ]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".expo",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
